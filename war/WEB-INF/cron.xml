<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/cron/push_subscribe</url>
    <description>Renew the PuSH subscription to completed matches.</description>
    <schedule>every 48 hours</schedule>
  </cron>
  <cron>
    <url>/cron/update_stats</url>
    <description>Update the server statistics in batch.</description>
    <schedule>every 8 hours</schedule>
    <target>stats</target>
  </cron>
  <cron>
    <url>/cron/update_recent_ongoing</url>
    <description>Update recent matches still listed as "ongoing".</description>
    <schedule>every 30 minutes</schedule>
  </cron>
  <cron>
    <url>/cron/update_all_ongoing</url>
    <description>Update all matches still listed as "ongoing".</description>
    <schedule>every 24 hours</schedule>
  </cron>
  <cron>
    <url>/cron/generate_player_reports</url>
    <description>Generate email reports about players for interested users.</description>
    <schedule>every 24 hours</schedule>
  </cron>
  <cron>
    <url>/cron/cleanup_old_blobs</url>
    <description>Clean up old orphaned blobs.</description>
    <schedule>every 1 hours</schedule>
  </cron>  
</cronentries>