<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/cron/push_subscribe</url>
    <description>Renew the PuSH subscription to completed matches every two days.</description>
    <schedule>every 48 hours</schedule>
  </cron>
  <cron>
    <url>/cron/update_stats</url>
    <description>Update the server statistics every four hours.</description>
    <schedule>every 4 hours</schedule>
  </cron>
  <cron>
    <url>/cron/update_ongoing</url>
    <description>Update matches still listed as "ongoing" every hour.</description>
    <schedule>every 1 hours</schedule>
  </cron>
</cronentries>